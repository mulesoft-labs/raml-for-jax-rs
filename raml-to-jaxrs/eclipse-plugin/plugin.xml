<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension  point="org.eclipse.ui.menus">
      <menuContribution
          locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
        
          <command
              commandId="raml-jaxrs-eclipse-plugin.generate"
              label="Convert RAML to JAX-RS"
              style="push">
                  <visibleWhen>
                      <with  variable="activeMenuSelection">
                          <iterate>
                   				<adapt
                           			type="org.eclipse.core.resources.IResource">
                           			<test
                   						property="org.eclipse.core.resources.name"
                   						value="*.raml" >
                   					</test>
                   				</adapt>
                          </iterate>
                      </with>
                  </visibleWhen>
          </command>
      </menuContribution>
      <menuContribution
          locationURI="popup:org.eclipse.jdt.ui.PackageExplorer#PopupMenu?after=additions">
        
          <command
              commandId="raml-jaxrs-eclipse-plugin.generate"
              label="Convert RAML to JAX-RS"
              style="push">
                  <visibleWhen>
                      <with  variable="activeMenuSelection">
                          <iterate>
                   				<adapt
                           			type="org.eclipse.core.resources.IResource">
                           			<test
                   						property="org.eclipse.core.resources.name"
                   						value="*.raml" >
                   					</test>
                   				</adapt>
                          </iterate>
                      </with>
                  </visibleWhen>
          </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="raml-jaxrs-eclipse-plugin.generate"
            name="Convert RAML to JAXRS">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="raml.jaxrs.eclipse.plugin.GenerationHandler"
            commandId="raml-jaxrs-eclipse-plugin.generate">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.views">
   </extension>
</plugin>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.raml.jaxrs</groupId>
        <artifactId>raml-to-jaxrs</artifactId>
        <version>2.1.2-SNAPSHOT</version>
    </parent>

    <artifactId>raml-to-jaxrs-gradle-plugin-wrapper</artifactId>

    <name>RAML JAX-RS Gradle Plugin</name>
    <properties>
        <maven.install.skip>false</maven.install.skip>
        <maven.deploy.skip>false</maven.deploy.skip>
    </properties>

    <build>
        <sourceDirectory>src/main/groovy</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.fortasoft</groupId>
                <artifactId>gradle-maven-plugin</artifactId>
                <version>1.0.8</version>
                <executions>
                    <execution>
                        <id>install</id>
                        <phase>install</phase>
                        <goals>
                            <goal>invoke</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <task>install</task>
                            </tasks>
                            <jvmArgs>
                                <jvmArg>-DartifactVersion=${project.version}</jvmArg>
                            </jvmArgs>
                            <gradleVersion>3.5</gradleVersion>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy</id>
                        <phase>deploy</phase>
                        <configuration>
                            <file>./build/libs/raml-to-jaxrs-gradle-plugin-${project.version}.jar/</file>
                            <sources>./build/libs/raml-to-jaxrs-gradle-plugin-${project.version}-sources.jar</sources>
                            <javadoc>./build/libs/raml-to-jaxrs-gradle-plugin-${project.version}-javadoc.jar</javadoc>
                            <pomFile>./build/poms/pom-default.xml</pomFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
